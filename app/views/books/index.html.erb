<p id="notice"><%= notice %></p>

<%= link_to t('.sign_out'), destroy_user_session_path %>
<%= link_to t('.users_edit'), edit_user_registration_path%>

<% if current_user.image.attached? %>
  <%= image_tag(current_user.image, :size => "80x80") %>
<% elsif current_user.image_url? %>
  <%= image_tag(current_user.image_url, :size => "80x80") %>
<% end %>


<h1><%= t('.books') %></h1>
<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.memo') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('.show'), book %></td>
        <td><%= link_to t('.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new'), new_book_path %>

<%= paginate @books %>

